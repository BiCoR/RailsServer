<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => t(model_class.model_name.human.pluralize.titleize) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(t :id) %></th>
      <th><%= model_class.human_attribute_name(t :last_name) %></th>
      <th><%= model_class.human_attribute_name(t :first_name) %></th>
      <th><%= model_class.human_attribute_name(t :email) %></th>
      <th><%= model_class.human_attribute_name(t :telefon_fest) %></th>
      <th><%= model_class.human_attribute_name(t :telefon_mobil) %></th>
      <th><%= model_class.human_attribute_name(t :geburtsdatum) %></th>
      <th><%= model_class.human_attribute_name(t :bild) %></th>
      <% if @current_user.isAdmin? %>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(t :created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% if @people
           @people.each do |person| %>
          <tr>
            <td><%= (link_to person.id, user_person_path(:user_id => person.user_id, :id => person.id)) if person.user_id %></td>
            <td><%= person.last_name %></td>
            <td><%= person.first_name %></td>
            <td><%= person.email %></td>
            <td><%= person.telefon_fest %></td>
            <td><%= person.telefon_mobil %></td>
            <td><%= person.geburtsdatum %></td>
            <td><%= person.bild %></td>
            <% if @current_user.isAdmin? %>
                <td><%= person.user_id %></td>
            <% end %>
            <td><%=l person.created_at %></td>
            <td>
              <% if person.user_id %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_user_person_path(person.user_id, person.id), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          user_person_path(:user_id => person.user_id, :id => person.id),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            <% end %>
            </td>
          </tr>
        <% end
      end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_person_path,
            :class => 'btn btn-primary' %>
