<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table  class="table table-hover table-striped table-condensed">
  <caption></caption>
  <tr>
    <td><strong><%= (t :last_name) %></td>
    <td><%= @person.last_name %></td>
  </tr>
  <tr>
    <td><strong><%= (t :first_name ) %></td>
    <td><%= @person.first_name %></td>
  </tr>
  <tr>
    <td><strong><%= (t :email ) %></td>
    <td><%= @person.email %></td>
  </tr>
  <tr>
    <td><strong><%= (t :telefon_fest ) %></td>
    <td><%= @person.telefon_fest %></td>
  </tr>
  <tr>
    <td><strong><%= (t :telefon_mobil ) %></td>
    <td><%= @person.telefon_mobil %></td>
  </tr>
  <tr>
    <td><strong><%= (t :geburtsdatum ) %></td>
    <td><%=l @person.geburtsdatum %></td>
  </tr>
  <tr>
    <td><strong><%#= (t :bild ) %></td>
    <td><%#= @person.bild %></td>
  </tr>
  <% if @current_user.isAdmin? %>
      <tr>
        <td><strong><%= (t :user_id ) %></td>
        <td><%= @person.user_id %></td>
      </tr>
  <% end %>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_people_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_person_path(@person.user_id, @person.id), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_person_path(@person.user_id, @person.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
