<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table  class="table table-hover table-striped table-responsive">
  
  <tr>
    <td><strong><%= model_class.human_attribute_name(:email) %>:</strong></td>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:encrypted_password) %>:</strong></td>
    <td><%= @user.encrypted_password %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:reset_password_token) %>:</strong></td>
    <td><%= @user.reset_password_token %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:reset_password_sent_at) %>:</strong></td>
    <td><%= @user.reset_password_sent_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:remember_created_at) %>:</strong></td>
    <td><%= @user.remember_created_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:current_sign_in_at) %>:</strong></td>
    <td><%= @user.current_sign_in_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></td>
    <td><%= @user.last_sign_in_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:current_sign_in_ip) %>:</strong></td>
    <td><%= @user.current_sign_in_ip %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:last_sign_in_ip) %>:</strong></td>
    <td><%= @user.last_sign_in_ip %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:confirmation_token) %>:</strong></td>
    <td><%= @user.confirmation_token %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:confirmed_at) %>:</strong></td>
    <td><%= @user.confirmed_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:confirmation_sent_at) %>:</strong></td>
    <td><%= @user.confirmation_sent_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:unconfirmed_email) %>:</strong></td>
    <td><%= @user.unconfirmed_email %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:failed_attempts) %>:</strong></td>
    <td><%= @user.failed_attempts %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:unlock_token) %>:</strong></td>
    <td><%= @user.unlock_token %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:locked_at) %>:</strong></td>
    <td><%= @user.locked_at %></td>
  </tr>

  <tr>
    <td><strong><%= model_class.human_attribute_name(:admin) %>:</strong></td>
    <td><%= @user.admin %></td>
  </tr>

</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
