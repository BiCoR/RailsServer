<h2><%= t "Sign in" %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, t(:email) %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, t(:password) %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <input name="user[remember_me]" id="user_remember_me" type="checkbox" value="1">
                <%= t(:remember_me) %>
          </label>
        </div>
  <% end -%>

  <p></p>

  <div><%= f.submit value: t(:sign_in), class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
