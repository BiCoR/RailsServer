<h2><%= t(:sign_up) %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, t(:email) %><br />
  <%= f.email_field :email, :autofocus => true, :placeholder => t(:email) %></div>

  <div><%= f.label :password, t(:password) %><br />
  <%= f.password_field :password, :placeholder => t(:password) %></div>

  <div><%= f.label :password_confirmation, t(:password_confirmation) %><br />
  <%= f.password_field :password_confirmation, :placeholder => t(:password_confirmation) %></div>

  <p></p>

  <%= f.submit value: t(:sign_up), class: 'btn btn-primary btn-devise' %>
<% end %>

<%= render "devise/shared/links" %>
